/* components/image-and-article-list/index.wxss */
.list {
  font-size: 28rpx;
  padding: 0 32rpx;
}

.list .title {
  text-align: center;
  font-size: 60rpx;
  line-height: 2.2em;
  position: relative;
}

.list .title text {
  background: #FFF;
  padding: 0 0.8em;
}

.list .title::before {
  content: '';
  height: 2rpx;
  display: block;
  background: repeating-linear-gradient(90deg, white, white 6rpx, black 0, black 8rpx);
  position: absolute;
  top: 50%;
  left: 0;
  width: 100%;
  z-index: -1;
}

.list .element {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.list .element>image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.list .element .info view:nth-child(1) {
  font-size: 40rpx;
  padding: .2em 0;
}

.list .element .info view:nth-child(2) {
  font-size: 24rpx;
  border-bottom: dashed 1px #ccc;
  padding: .3em 0;
  color: #666;
}
.list .element .info view:nth-child(2) text {
  font-style: italic;
}

.list .element .info view:nth-child(3) {
  font-size: 24rpx;
  color: #666;
  padding: .3em 0;
}

.list .element .info view:nth-child(3) text {
  color: #c00000;
  padding-right: 0.6em;
}

.big-view>view.element:nth-child(2) {
  flex-direction: column;
}
.big-view>view.element:nth-child(2)>image {
  width: 100%;
  margin: 0 0 .2em 0;
}
.big-view>view.element:nth-child(2)>.info {
  width: 100%;
}
.big-view .element image {
  width: 300rpx;
  height: 300rpx;
  margin-right: 30rpx;
}
